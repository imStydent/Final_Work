<Page x:Class="FragrantWorld.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FragrantWorld.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage" FontFamily="Comic Sans MS">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <Label Content="Логин"/>
            <TextBox Name="loginTextBox"/>
            <Label Content="Пароль"/>
            <TextBox Name="passwordTextBox"/>
            <Button  Name="loginButton" Content="Войти" Margin="2,5,2,5" Click="LoginButton_Click"/>
            <Button Name="loginGuestButton" Content="Войти как гость" Click="LoginGuestButton_Click" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>
